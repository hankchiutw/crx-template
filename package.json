{
  "name": "crx-template",
  "version": "0.1.0",
  "description": "project description",
  "main": "index.js",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build --clean",
    "clean": "rm -rf dist",
    "postbuild": "cd dist && zip -r crx-template_${npm_package_version}.zip *",
    "bump": "HUSKY_SKIP_HOOKS=1 release-it --ci",
    "bump:manifest": "sed -i '' \"/\\\"version\\\":/s/\\\"[0-9.]*\\\"/\\\"$npm_package_version\\\"/\" ./src/manifest.json",
    "lint": "tsc --noEmit && eslint './src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "yarn lint --fix && pretty-quick --staged",
    "test": "jest",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "author": "hankchiutw",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "snowpack": "^3.0.13",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "chromex": "^1.2.2"
  }
}
